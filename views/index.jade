extends layout

block append head
    script(src='/javascripts/index.js')
    link(rel='stylesheet', href='/stylesheets/index.css')

block content
    #content
        #teams
            .left
                span#team1= 'Team 1'
            .right
                span#team2= 'Team 2'

        .clear

        .center
            #time 00:00
            #halftime (1. Halbzeit)

        #points
            .digits
                .left
                    span(class="digit _0 team1") 0

                .right
                    span(class="digit _0 team2") 0



